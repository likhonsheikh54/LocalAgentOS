{
  "servers": {
    "playwright": {
      "type": "stdio",
      "command": "npx",
      "args": ["@playwright/mcp@latest"],
      "env": {
        "PLAYWRIGHT_BROWSERS_PATH": "/app/ms-playwright",
        "CHROME_URL": "ws://chrome:9222"
      }
    },
    "sequentialthinking": {
      "type": "stdio",
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "--network=host",
        "mcp/sequentialthinking"
      ],
      "env": {
        "MODEL_RUNNER_URL": "http://model-runner:8080",
        "OPENAI_API_KEY": "${OPENAI_API_KEY}"
      }
    }
  },
  "logging": {
    "level": "debug",
    "file": "/app/data/agent.log",
    "console": true
  },
  "modelRunner": {
    "url": "http://model-runner:8080",
    "timeout": 30000,
    "retries": 3
  },
  "browser": {
    "url": "ws://chrome:9222",
    "timeout": 30000,
    "retries": 3
  }
}
